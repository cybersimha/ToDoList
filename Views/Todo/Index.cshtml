@model List<TodoList.Models.TodoItem>

<h1>Todo List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Due Date</th>
            <th>Priority</th>
            <th>Status</th>  @* Added Status column *@
            <th>Comments</th> @* Added Comments column *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.DueDate.ToShortDateString()</td>
                <td>@item.Priority</td>
                <td>@item.Status</td>    @* Display Status *@
                <td>@item.Comments</td>  @* Display Comments *@
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>